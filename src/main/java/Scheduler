
!import Component
!import EnableScheduling
!import Service
!import Scheduled

@Component
@EnableScheduling
@Service

public class Scheduler{
    final PessoaServiceImpl pessoaServiceImpl;
    public Scheduler(PessoaServiceImpl pessoaServiceImpl){
        this.pessoaServiceImpl=pessoaServiceImpl;
    }
    @Scheduled(initialDeDelay=10000, fixdRate= 1500000)
    
    public void executaAgendamentos () {
        pessoaService.adicionarTaxa();
        System.out.println("O agendamento foi iniciado");
    
    }
}